<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:paddingTop="5dip"
    android:paddingBottom="5dip">
    <ImageView
        android:id="@+id/color_label"
        android:background="#329600"        
        android:layout_width="12dip"
        android:layout_height="fill_parent"
        android:layout_marginRight="6dip" />   
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#FF808080"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">            
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:layout_marginBottom="1dp"
            android:padding="2dip">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/stock_symbol"
                    android:gravity="left"
                    android:text="PUBIC BANK BHD"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_weight="1" />                              
                <TextView
                    android:id="@+id/stock_code"
                    android:gravity="right"
                    android:text="1295.KL"
                    android:layout_height="wrap_content"                    
                    android:layout_width="fill_parent"
                    android:layout_weight="1" />
            </LinearLayout>
        </TableRow>
                                    
        <TableRow>
            <TextView
                android:id="@+id/price_label"
                android:text="Price"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:background="#000000"
                android:paddingTop="2dip"
                android:paddingLeft="2dip"
                android:paddingBottom="2dip"
                android:layout_marginBottom="1dp" />
            <TextView
                android:id="@+id/price"
                android:gravity="right"
                android:text="13.42"
                android:paddingRight="3dp"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:background="#000000"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                android:layout_marginBottom="1dp" 
                android:layout_marginRight="1dp" />                    
            <TextView
                android:id="@+id/change_label"
                android:text="Change"
                android:paddingLeft="3dp"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:background="#000000"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                android:layout_marginBottom="1dp" />  
            <TextView
                android:id="@+id/change"
                android:gravity="right"
                android:text="-0.05"
                android:textColor="#C80032"                
                android:layout_width="0dip"
                android:layout_weight="1"                
                android:background="#000000"
                android:paddingRight="2dip"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                android:layout_marginBottom="1dp" />            
        </TableRow>
                         
        <TableRow>
           <TextView
                android:id="@+id/quantity_label"
                android:text="Quantity"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:background="#000000"
                android:paddingTop="2dip"
                android:paddingLeft="2dip"
                android:paddingBottom="2dip"
                android:layout_marginBottom="1dp" />                
           <TextView
                android:id="@+id/quantity"
                android:gravity="right"
                android:text="100"
                android:paddingRight="3dp"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:background="#000000"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                android:layout_marginBottom="1dp" 
                android:layout_marginRight="1dp" />
            <TextView
                android:id="@+id/value_label"
                android:text="Value"
                android:paddingLeft="3dp"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:background="#000000"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                android:layout_marginBottom="1dp" />  
            <TextView
                android:id="@+id/value"
                android:gravity="right"
                android:text="1,342.00"
                android:layout_width="0dip"
                android:layout_weight="1"                
                android:background="#000000"
                android:paddingRight="2dip"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                android:layout_marginBottom="1dp" />           
        </TableRow>
                    
        <TableRow>                    
            <TextView
                android:id="@+id/purchase_price_label"
                android:text="P.Price"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:background="#000000"
                android:paddingTop="2dip"
                android:paddingLeft="2dip"
                android:paddingBottom="2dip"
                android:layout_marginBottom="1dp" />                
           <TextView
                android:id="@+id/purchase_price"
                android:gravity="right"
                android:text="10.05"
                android:paddingRight="3dp"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:background="#000000"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                android:layout_marginBottom="1dp" 
                android:layout_marginRight="1dp" />                                    
            <TextView
                android:id="@+id/purhcase_value_label"
                android:text="P.Value"
                android:paddingLeft="3dp"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:background="#000000"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                android:layout_marginBottom="1dp" />  
            <TextView
                android:id="@+id/purchase_value"
                android:gravity="right"
                android:text="1,005.00"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:background="#000000"
                android:paddingRight="2dip"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                android:layout_marginBottom="1dp" />           
        </TableRow>
            
        <TableRow
            android:background="#000000"        
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="2dip">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/profit_Label"
                    android:gravity="left"
                    android:text="Profit"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_weight="1" />                                         
                <TextView
                    android:id="@+id/profit"
                    android:gravity="right"
                    android:text="+342.00 (+34.03%)"
                    android:textColor="#329600"
                    android:layout_height="wrap_content"                    
                    android:layout_width="fill_parent"
                    android:layout_weight="1" />
            </LinearLayout>
        </TableRow>                                           
    </TableLayout>   
</LinearLayout>